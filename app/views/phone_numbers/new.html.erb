<div id="send-pin">
    <h3>Enter your number</h3>
    <%= form_for @phone_number, remote: true do |f|%>
        <div class="form-group">
            <%= f.text_field :phone_number%>
        </div>
        <%= f.submit "Requset pin", class: "btn btn-danger", id: 'send-pin-link'%>
    <%end%>
</div>    

<div id="status-box" class="alert alert-success">
    <p id="status-message">Status: Nothing happening yet</p>
</div>   

<div id="verify-pin">
<h3>Enter pin</h3>
<%= form_tag phone_numbers_verify_path, remote: true do |f| %>
    <%hidden_field_tag 'hidden_phone_number', '' %>
    <div class="form-group">
        <%= text_field_tag :pin%>
    </div>
    <%= submit_tag "Confirm", class: "btn btn-danger"%>
    <% end %>   
 </div>

 <div id="status-box" class="alert alert-success">
    <p id="status-message">Status: Nothing happening</p>
 </div>          